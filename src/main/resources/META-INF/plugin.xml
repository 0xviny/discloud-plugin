<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>com.discloud-plugin.discloud</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>Discloud</name>

    <version>1.0.0</version>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor url="https://discloud.com/">Discloud</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        A simple plugin to manage your projects hosted on Discloud, the best Brazilian hosting for large and small projects.
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable instance="com.discloudplugin.discloud.settings.ApiKeyConfigurable"/>

        <applicationService serviceImplementation="com.discloudplugin.discloud.PluginLauncher"/>

        <toolWindow id="Discloud" anchor="left"
                    icon="/icons/pluginIcon.png"
                    factoryClass="com.discloudplugin.discloud.ui.DiscloudToolWindowFactory" secondary="false"/>
    </extensions>

    <actions>
        <action class="com.discloudplugin.discloud.actions.CommitDiscloudAction"
                id="CommitAction"
                text="Commit Discloud"
                description="Upload your .jar to Discloud.">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action class="com.discloudplugin.discloud.actions.CreateDiscloudConfig"
                id="CreateDiscloudConfigAction"
                text="Create discloud.config"
                description="Create the discloud config file.">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action class="com.discloudplugin.discloud.actions.UploadProjectToDiscloudAction"
                id="UploadProject"
                text="Upload in Discloud"
                description="Upload this project in Discloud.">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>

        <action id="Discloud.ShowToolWindow"
                class="com.discloudplugin.discloud.actions.ShowDiscloudToolWindow"
                text="Discloud"
                description="Open the discloud panel">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>


</idea-plugin>